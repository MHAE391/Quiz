<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.m391.quiz.ui.question.preview.PreviewQuestionViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        tools:context=".ui.question.preview.PreviewQuestionFragment">


        <RelativeLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="@dimen/margin_20"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@{`Question ` + String.valueOf(viewModel.question.number)}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_18"
                android:textStyle="italic|bold"
                android:visibility="visible"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@{String.valueOf(viewModel.question.questionScore) + ` Points`}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="italic|bold"
                android:visibility="visible"
                tools:ignore="RelativeOverlap" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start|center"
                android:background="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/delete"
                tools:ignore="ContentDescription,UnusedAttribute,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/text"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@color/border_color" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_title"
            android:layout_marginBottom="@dimen/margin_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/borders"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <TextView
                    android:id="@+id/question_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:padding="@dimen/padding_10"
                    android:text="@{viewModel.question.headerText + ` ?`}"
                    android:textColor="@color/color_rose"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:id="@+id/question_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/borders"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_5">

                    <TextView
                        android:id="@+id/question_body_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:padding="@dimen/padding_5"
                        android:text="@{viewModel.question.bodyText}"
                        android:textSize="@dimen/font_size_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/question_body_Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:contentDescription="@string/question_image_body"
                        android:padding="@dimen/padding_5"
                        android:questionImageByteArray="@{viewModel.question.bodyImage}" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:background="@color/border_color" />

                <LinearLayout
                    android:id="@+id/essay_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/answer_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/edit_text_view"
                        android:hint="@string/answer_body"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:maxLines="20"
                        android:minHeight="100dp"
                        android:padding="@dimen/padding_10"
                        android:scrollbarSize="0dp"
                        android:scrollbars="vertical"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:id="@+id/answer_image_body_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:padding="@dimen/padding_5"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/body_image"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights,RelativeOverlap" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/question_image_body"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:minWidth="48dp"
                            android:padding="@dimen/padding_10"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            tools:cardCornerRAdius="5dp"
                            tools:ignore="TouchTargetSizeCheck">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/padding_10"
                                android:text="@string/select_answer_body_image"
                                android:textColor="@color/card_view_text"
                                android:textSize="@dimen/font_size_14"
                                android:textStyle="bold|normal" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/rest_body_image"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.35"
                            android:contentDescription="@string/reset"
                            android:padding="@dimen/padding_10"
                            android:src="@mipmap/reset" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mcqGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/borders"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mcq_first_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/first_answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_5"
                            android:text="@{viewModel.question.answerChoicesFirstText}"
                            android:textSize="@dimen/font_size_16"
                            tools:ignore="DuplicateSpeakableTextCheck" />

                        <ImageView
                            android:id="@+id/first_answer_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:contentDescription="@string/mcq_answer_image"
                            android:padding="@dimen/padding_10"
                            android:questionImageByteArray="@{viewModel.question.answerChoicesFirstImage}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/border_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mcq_second_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/second_answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_5"
                            android:text="@{viewModel.question.answerChoicesSecondText}"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/second_answer_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:contentDescription="@string/mcq_answer_image"
                            android:padding="@dimen/padding_10"
                            android:questionImageByteArray="@{viewModel.question.answerChoicesSecondImage}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/border_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mcq_third_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/third_answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_5"
                            android:text="@{viewModel.question.answerChoicesThirdText}"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/third_answer_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:contentDescription="@string/mcq_answer_image"
                            android:padding="@dimen/padding_10"
                            android:questionImageByteArray="@{viewModel.question.answerChoicesThirdImage}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/border_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mcq_fourth_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/fourth_answer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_5"
                            android:text="@{viewModel.question.answerChoicesFourthText}"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:id="@+id/fourth_answer_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:contentDescription="@string/mcq_answer_image"
                            android:padding="@dimen/padding_10"
                            android:questionImageByteArray="@{viewModel.question.answerChoicesFourthImage}" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/border_color" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>